# Use the Google style in this project.
BasedOnStyle: Google

IndentWidth: 4
ColumnLimit: 90


---
Language:    	Cpp

UseTab: Never
SpaceBeforeCpp11BracedList: true
Standard: c++20

SeparateDefinitionBlocks: Always
BreakBeforeBinaryOperators: All
AllowShortFunctionsOnASingleLine: Empty

IncludeBlocks: Regroup
IncludeIsMainRegex: '(_test)?$'
IncludeCategories:
- Regex:    '^<(gtest/|gmock/)'
  Priority: 2
- Regex:    '^<(boost/|fmt/|range/|blend2d\.h|benchmark/|folly/|absl/|gsl/|ankerl/)'
  Priority: 3
- Regex:    '^<Q'
  CaseSensitive:   true
  Priority: 4
- Regex:    '^<'
  Priority: 5
- Regex:    '^"'
  Priority: 1
  SortPriority: 0

