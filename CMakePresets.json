{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "common-linux",
            "hidden": true,
            "inherits": "common",
            "condition": {"type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux"}
        },
        {
            "name": "common-windows",
            "hidden": true,
            "inherits": "common",
            "condition": {"type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows"},
            
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [ "Windows" ]
                }
            }
        },

        {
            "name": "linux-gcc-debug",
            "displayName": "GCC Debug",
            "description": "Compile debug build type with GCC compiler",
            "inherits": "common-linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc-13",
                "CMAKE_CXX_COMPILER": "g++-13",

                "LS_ENABLE_CCACHE": "ON",
                "LS_ENABLE_PCH": "ON",
                "LS_ENABLE_LTO": "OFF"
            }
        },
        {
            "name": "linux-gcc-release",
            "displayName": "GCC Debug",
            "description": "Compile release build type with GCC compiler",
            "inherits": "common-linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "gcc-13",
                "CMAKE_CXX_COMPILER": "g++-13",

                "LS_ENABLE_CCACHE": "ON",
                "LS_ENABLE_PCH": "ON",
                "LS_ENABLE_LTO": "ON"
            }
        },

        {
            "name": "linux-clang-debug",
            "displayName": "Clang Debug",
            "description": "Compile debug build type with Clang compiler",
            "inherits": "common-linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang-18",
                "CMAKE_CXX_COMPILER": "clang++-18",

                "LS_ENABLE_CCACHE": "ON",
                "LS_ENABLE_PCH": "ON",
                "LS_ENABLE_LTO": "OFF"
            }
        },
        {
            "name": "linux-clang-release",
            "displayName": "Clang Debug",
            "description": "Compile release build type with Clang compiler",
            "inherits": "common-linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang-18",
                "CMAKE_CXX_COMPILER": "clang++-18",

                "LS_ENABLE_CCACHE": "ON",
                "LS_ENABLE_PCH": "ON",
                "LS_ENABLE_LTO": "ON"
            }
        },
		
        {
            "name": "windows-msvc-debug",
            "displayName": "MSVC Debug",
            "description": "Compile debug build type with MSVC compiler",
            "inherits": "common-windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",

                "LS_ENABLE_CCACHE": "ON",
                "LS_ENABLE_PCH": "ON",
                "LS_ENABLE_LTO": "OFF"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-msvc-x64"
                }
            }
        },
        {
            "name": "windows-msvc-release",
            "displayName": "MSVC Release",
            "description": "Compile release build type with MSVC compiler",
            "inherits": "common-windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",

                "LS_ENABLE_CCACHE": "ON",
                "LS_ENABLE_PCH": "ON",
                "LS_ENABLE_LTO": "ON"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-msvc-x64"
                }
            }
        },
        
        {
            "name": "windows-clang-debug",
            "displayName": "Clang Debug",
            "description": "Compile debug build type with Clang compiler",
            "inherits": "common-windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl",
                
                "LS_ENABLE_CCACHE": "ON",
                "LS_ENABLE_PCH": "ON",
                "LS_ENABLE_LTO": "OFF"
                
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-clang-x64"
                }
            }
        },
        {
            "name": "windows-clang-release",
            "displayName": "Clang Release",
            "description": "Compile release build type with Clang compiler",
            "inherits": "common-windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl",
                
                "LS_ENABLE_CCACHE": "ON",
                "LS_ENABLE_PCH": "ON",
                "LS_ENABLE_LTO": "ON"
                
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-clang-x64"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-clang-debug",
            "configurePreset": "linux-clang-debug"
        }
    ]
}
